@model Lekkerbek.Web.Models.Order


@{
    List<OrderLine> listOfTheOrder = ViewBag.listOfTheOrder;
    ViewData["Title"] = "Details";

}

<h1>Order Details</h1>
<form asp-action="OrderDetails" asp-route-id="@Model?.OrderID">
<div>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimeSlot)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeSlot.StartTimeSlot)
        </dd>
    </dl>
   
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Dish Name
            </th>
          
            <th>
                Dish Amount
            </th>
            <th>
                Extra Details
            </th>

            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in listOfTheOrder)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.MenuItem.Name)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.DishAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExtraDetails)
                </td>
                
                <td></td>
            </tr>
        }
       
        
        
            
    </tbody>
</table>



    @Html.DropDownList("ChefSelectList", (IEnumerable<SelectListItem>)ViewBag.ChefSelectList, new{@id="Chef"})
    <p class="text-danger">@ViewData["TimeSlotError"] </p>
    <input type="submit" value="Prepare This Order" class="btn btn-primary mt-3" />
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
