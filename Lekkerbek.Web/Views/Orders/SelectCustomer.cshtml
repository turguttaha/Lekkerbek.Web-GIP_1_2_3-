@model Lekkerbek.Web.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create Order</h1>
<div class="wrapper option-1 option-1-1">
    <ol class="c-stepper">
        <li class="c-stepper__item-done">
            <h3 class="c-stepper__title">Step 1</h3>
            <p class="c-stepper__desc">Select Customer</p>
        </li>
        <li class="c-stepper__item">
            <h3 class="c-stepper__title">Step 2</h3>
            <p class="c-stepper__desc">Select Time Slot</p>
        </li>
        <li class="c-stepper__item">
            <h3 class="c-stepper__title">Step 3</h3>
            <p class="c-stepper__desc">Select Chef</p>
        </li>
        <li class="c-stepper__item">
            <h3 class="c-stepper__title">Step 4</h3>
            <p class="c-stepper__desc">Add to orderline</p>
        </li>
    </ol>
</div>

<h4>Select Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SelectCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <a class="btn btn-danger" asp-area="" asp-controller="Customers" asp-action="Create">Create New Customer</a>
            </div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label">Customer Name</label>
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Next Step" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}