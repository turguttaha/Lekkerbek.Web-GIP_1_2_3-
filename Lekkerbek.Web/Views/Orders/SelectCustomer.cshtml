@model Lekkerbek.Web.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create Order</h1>

<h4>Select Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SelectCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <a class="btn btn-danger" asp-area="" asp-controller="Customers" asp-action="Create">Create New Customer</a>
            </div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label">Customer Name</label>
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Next Step =>" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}