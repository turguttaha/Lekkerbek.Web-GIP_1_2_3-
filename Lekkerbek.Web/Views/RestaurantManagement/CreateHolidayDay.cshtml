@model Lekkerbek.Web.Models.RestaurantHoliday

@{
    ViewData["Title"] = "CreateHolidayDay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateHolidayDay</h1>

<h4>RestaurantHoliday</h4>
<hr />
<p class="text-danger">@ViewBag.hError</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateHolidayDay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="HolidayDays">Back to Restaurant Managment Page</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

