@model Lekkerbek.Web.Models.RestaurantOpeninghours

@{
    ViewData["Title"] = "EditOpeningsHour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Openingsuren wijzigen</h1>

<h4>Openingsuren restaurant</h4>
<hr />
<p class="text-danger">@ViewBag.oHError</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOpeningsHour">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RestaurantOpeninghoursId" />
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label>
                <select asp-for="DayOfWeek" class="form-control" asp-items="Html.GetEnumSelectList<DayOfWeekEnum>()"></select>
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="OpeningsHours">Terug naar de lijst</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
