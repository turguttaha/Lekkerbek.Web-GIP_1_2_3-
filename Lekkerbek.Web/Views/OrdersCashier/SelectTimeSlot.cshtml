@model Lekkerbek.Web.Models.TimeSlot

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>TimeSlot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SelectTimeSlot">
            <div asp-validation-summary="ModelOnly" ></div>
            <div class="form-group">
                
                <label asp-for="StartTimeSlot" class="control-label"></label>
                <input value="@TempData["SelectDate"]" asp-for="StartTimeSlot" type="date" class="form-control" />
               
                
                
            </div>
            <div class="form-group">

                <label asp-for="StartTimeSlot" class="control-label"></label>
                @Html.DropDownList("TimeSlotsSelectList", (IEnumerable<SelectListItem>)ViewBag.TimeSlotsSelectList)
                <span asp-validation-for="StartTimeSlot" class="text-danger"></span>


            </div>
            
            <div class="form-group">
                <input type="submit" value="Volgende Stap" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
