@model Lekkerbek.Web.Models.OrderLine

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Dish from Order?</h3>
<div>
    <h4>OrderLine</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order) ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MenuItem.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DishAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DishAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExtraDetails)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExtraDetails)
        </dd>

   
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderLineID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>

    @if (User.IsInRole("Adinistrator"))
    {
        <div>
            <a asp-controller="Orders" asp-action="EditOrder" asp-route-id="@Model.OrderID">Back to Order</a>
        </div>
    }
    else
    {
        <div>
            <a asp-controller="OrderModule" asp-action="EditOrder" asp-route-id="@Model.OrderID">Back to Order</a>
        </div>
    }
</div>
